<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap.Et">
        <item name="android:background">@drawable/ll_rounded_white_box</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColorHint">@color/txt_color_hint</item>
        <item name="android:textColor">@color/txt_color_input</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="match_wrap.Et.multiAutoCompleteTextview">
        <item name="android:completionThreshold">2</item>
        <item name="android:dropDownVerticalOffset">0.5dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">100</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:typeface">normal</item>
    </style>

</resources>